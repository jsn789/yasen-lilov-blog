---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getRecentPosts, formatDate } from '../lib/sanity';

const posts = await getRecentPosts(6);
---

<BaseLayout title="Yasen Lilov — Data, Analytics & AI" activePage="home">

  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <span class="hero-label">Data &middot; Analytics &middot; AI</span>
        <h1>I turn <span class="binary">01100100 01100001 01110100 01100001</span> into business — and occasionally into side projects.</h1>
        <p>Partner at VertoDigital, where I run the data & analytics practice and wire AI into how we work.</p>
        <div class="hero-actions">
          <a href="/about" class="btn btn-primary">About me</a>
          <a href="/blog" class="btn btn-secondary">Read the blog</a>
          <a href="https://linkedin.com/in/yasenlilov" target="_blank" rel="noopener" class="btn btn-ghost"><svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg> Follow on LinkedIn</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Posts -->
  <section>
    <div class="container">
      <div class="section-header">
        <h2>Recent writing</h2>
        <p>Thoughts on analytics, AI, and building MarTech systems.</p>
      </div>

      {posts.length > 0 ? (
        <div class="post-grid">
          {posts.map((post: any) => (
            <article class="post-card">
              <div class="post-card-meta">
                <span class="post-card-category">{post.category}</span>
                <span>{formatDate(post.publishedAt)}</span>
              </div>
              <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
              <p>{post.excerpt}</p>
              {post.tags && post.tags.length > 0 && (
                <div class="post-card-tags">
                  {post.tags.map((tag: string) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </article>
          ))}
        </div>
      ) : (
        <p style="color: var(--text-muted); text-align: center;">Posts coming soon — content migration in progress.</p>
      )}

      <div style="text-align: center; margin-top: 48px;">
        <a href="/blog" class="btn btn-secondary">View all posts &rarr;</a>
      </div>
    </div>
  </section>

</BaseLayout>
