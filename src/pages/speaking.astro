---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Speaking & Events — Yasen Lilov" activePage="speaking">

  <!-- Header -->
  <section class="hero" style="padding-bottom: 20px;">
    <div class="container">
      <h1 style="font-size: 2.25rem;">Speaking & Events</h1>
      <p style="color: var(--text-secondary); margin-top: 8px;">Conferences, webinars, workshops, and the occasional unconference.</p>
    </div>
  </section>

  <!-- Upcoming -->
  <section style="padding-top: 0; padding-bottom: 48px;">
    <div class="container">
      <div class="section-header">
        <h2>Upcoming</h2>
      </div>

      <div class="events-list">
        <div class="event-card">
          <div class="event-date">
            <span class="event-month">TBD</span>
            <span class="event-year">2025</span>
          </div>
          <div class="event-details">
            <span class="event-type">Conference</span>
            <h3>More events coming soon</h3>
            <p>Got an event you'd like me to speak at? <a href="/contact">Get in touch</a>.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Past Events -->
  <section style="padding-top: 0;">
    <div class="container">
      <div class="section-header">
        <h2>Past events</h2>
      </div>

      <div class="events-list">

        <!-- 2024 -->
        <div class="event-card">
          <div class="event-date">
            <span class="event-month">2024</span>
          </div>
          <div class="event-details">
            <span class="event-type">Unconference</span>
            <h3>MeasureCamp London</h3>
            <p>AI-Powered Analytics Workflows</p>
          </div>
        </div>

        <div class="event-card">
          <div class="event-date">
            <span class="event-month">2024</span>
          </div>
          <div class="event-details">
            <span class="event-type">Workshop</span>
            <h3>Google B2B Growth Bootcamp</h3>
            <p>GA4 Implementation & Strategy</p>
          </div>
        </div>

        <!-- 2023 -->
        <div class="event-card">
          <div class="event-date">
            <span class="event-month">2023</span>
          </div>
          <div class="event-details">
            <span class="event-type">Conference</span>
            <h3>SuperWeek Hungary</h3>
            <p>GA4 Server-Side Tracking in Practice</p>
          </div>
        </div>

        <div class="event-card">
          <div class="event-date">
            <span class="event-month">2023</span>
          </div>
          <div class="event-details">
            <span class="event-type">Conference</span>
            <h3>Analytics Summit</h3>
            <p>Building a Measurement Framework That Scales</p>
          </div>
        </div>

        <div class="event-card">
          <div class="event-date">
            <span class="event-month">2023</span>
          </div>
          <div class="event-details">
            <span class="event-type">Unconference</span>
            <h3>MeasureCamp London</h3>
            <p>Google Consent Mode v2 — What You Need to Know</p>
          </div>
        </div>

        <div class="event-card">
          <div class="event-date">
            <span class="event-month">2023</span>
          </div>
          <div class="event-details">
            <span class="event-type">Guest Lecture</span>
            <h3>AUBG — American University in Bulgaria</h3>
            <p>Digital Analytics & Career Paths in Data</p>
          </div>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .events-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .event-card {
    display: flex;
    gap: 24px;
    align-items: flex-start;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 24px;
    transition: all 0.25s;
  }
  .event-card:hover {
    border-color: var(--border-light);
    background: var(--bg-card-hover);
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 64px;
    text-align: center;
  }

  .event-month {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--accent);
  }

  .event-year {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .event-details {
    flex: 1;
  }

  .event-type {
    font-size: 0.72rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--text-muted);
    margin-bottom: 4px;
    display: block;
  }

  .event-details h3 {
    font-size: 1.05rem;
    font-weight: 700;
    margin-bottom: 4px;
    color: var(--text-primary);
  }

  .event-details p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 480px) {
    .event-card {
      flex-direction: column;
      gap: 12px;
    }
    .event-date {
      flex-direction: row;
      gap: 8px;
    }
  }
</style>
