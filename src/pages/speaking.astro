---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllEvents } from '../lib/sanity';

const events = await getAllEvents();
---

<BaseLayout title="Speaking & Events â€” Yasen Lilov" activePage="speaking">

  <!-- Header -->
  <section class="hero" style="padding-bottom: 20px;">
    <div class="container">
      <h1 style="font-size: 2.25rem;">Speaking & Events</h1>
      <p style="color: var(--text-secondary); margin-top: 8px;">Events, webinars, workshops, and the occasional unconference.</p>
      <p style="color: var(--text-secondary); margin-top: 12px;">Got an event you'd like me to speak at? <a href="/contact">Get in touch</a>.</p>
    </div>
  </section>

  <!-- Events -->
  <section style="padding-top: 0;">
    <div class="container">

      {events.length > 0 ? (
        <div class="events-list">
          {events.map((evt: any) => (
            <details class="event-card">
              <summary class="event-summary">
                <div class="event-date">
                  <span class="event-year">{evt.year}</span>
                </div>
                <div class="event-details">
                  <div class="event-meta">
                    <span class="event-type">{evt.eventType}</span>
                    {evt.location && <span class="event-location">{evt.location}</span>}
                  </div>
                  <h3>{evt.title}</h3>
                  {evt.topic && <p class="event-topic">{evt.topic}</p>}
                </div>
                <svg class="chevron" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </summary>
              <div class="event-body">
                {evt.description && <p class="event-description">{evt.description}</p>}
                <div class="event-links">
                  {evt.link && (
                    <a href={evt.link} target="_blank" rel="noopener noreferrer" class="event-link">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                      </svg>
                      Event link
                    </a>
                  )}
                </div>
                {evt.slidesEmbed && (
                  <div class="event-embed">
                    <iframe
                      src={evt.slidesEmbed}
                      width="100%"
                      height="400"
                      frameborder="0"
                      marginwidth="0"
                      marginheight="0"
                      scrolling="no"
                      allowfullscreen
                      loading="lazy"
                    ></iframe>
                  </div>
                )}
              </div>
            </details>
          ))}
        </div>
      ) : (
        <p style="color: var(--text-muted); text-align: center;">Events coming soon.</p>
      )}

    </div>
  </section>

</BaseLayout>

<style>
  .events-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .event-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    transition: all 0.25s;
  }
  .event-card:hover {
    border-color: var(--border-light);
    background: var(--bg-card-hover);
  }
  .event-card[open] {
    border-color: var(--border-light);
  }

  .event-summary {
    display: flex;
    gap: 20px;
    align-items: center;
    padding: 20px 24px;
    cursor: pointer;
    list-style: none;
    user-select: none;
  }
  .event-summary::-webkit-details-marker {
    display: none;
  }
  .event-summary::marker {
    display: none;
    content: '';
  }

  .chevron {
    color: var(--text-muted);
    transition: transform 0.2s;
    flex-shrink: 0;
  }
  .event-card[open] .chevron {
    transform: rotate(180deg);
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 52px;
    text-align: center;
  }

  .event-year {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--accent);
    font-variant-numeric: tabular-nums;
  }

  .event-details {
    flex: 1;
  }

  .event-meta {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-bottom: 4px;
  }

  .event-type {
    font-size: 0.72rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--text-muted);
  }

  .event-location {
    font-size: 0.72rem;
    color: var(--text-muted);
  }

  .event-details h3 {
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .event-topic {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-top: 2px;
    line-height: 1.5;
  }

  .event-body {
    padding: 0 24px 24px 96px;
  }

  .event-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 16px;
    white-space: pre-line;
  }

  .event-links {
    display: flex;
    gap: 12px;
    margin-bottom: 16px;
  }

  .event-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.82rem;
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
  }
  .event-link:hover {
    text-decoration: underline;
  }

  .event-embed {
    border-radius: var(--radius-md, 8px);
    overflow: hidden;
    margin-top: 12px;
  }
  .event-embed iframe {
    display: block;
    border: 1px solid var(--border);
    border-radius: var(--radius-md, 8px);
  }

  @media (max-width: 600px) {
    .event-summary {
      flex-wrap: wrap;
      gap: 12px;
      padding: 16px;
    }
    .event-date {
      min-width: auto;
    }
    .event-body {
      padding: 0 16px 16px 16px;
    }
  }
</style>
