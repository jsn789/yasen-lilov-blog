---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllEvents } from '../lib/sanity';

const events = await getAllEvents();
---

<BaseLayout title="Speaking & Events â€” Yasen Lilov" activePage="speaking">

  <!-- Header -->
  <section class="hero" style="padding-bottom: 20px;">
    <div class="container">
      <h1 style="font-size: 2.25rem;">Speaking & Events</h1>
      <p style="color: var(--text-secondary); margin-top: 8px;">Events, webinars, workshops, and the occasional unconference.</p>
      <p style="color: var(--text-secondary); margin-top: 12px;">Got an event you'd like me to speak at? <a href="/contact">Get in touch</a>.</p>
    </div>
  </section>

  <!-- Events -->
  <section style="padding-top: 0;">
    <div class="container">

      {events.length > 0 ? (
        <div class="events-list">
          {events.map((evt: any) => (
            <div class="event-card">
              <div class="event-date">
                <span class="event-month">{evt.year}</span>
              </div>
              <div class="event-details">
                <span class="event-type">{evt.eventType}</span>
                <h3>{evt.link ? <a href={evt.link} target="_blank" rel="noopener">{evt.title}</a> : evt.title}</h3>
                {evt.topic && <p>{evt.topic}</p>}
              </div>
            </div>
          ))}
        </div>
      ) : (
        <p style="color: var(--text-muted); text-align: center;">Events coming soon.</p>
      )}

    </div>
  </section>

</BaseLayout>

<style>
  .events-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .event-card {
    display: flex;
    gap: 24px;
    align-items: flex-start;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 24px;
    transition: all 0.25s;
  }
  .event-card:hover {
    border-color: var(--border-light);
    background: var(--bg-card-hover);
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 64px;
    text-align: center;
  }

  .event-month {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--accent);
  }

  .event-year {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .event-details {
    flex: 1;
  }

  .event-type {
    font-size: 0.72rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--text-muted);
    margin-bottom: 4px;
    display: block;
  }

  .event-details h3 {
    font-size: 1.05rem;
    font-weight: 700;
    margin-bottom: 4px;
    color: var(--text-primary);
  }

  .event-details h3 a {
    color: var(--text-primary);
    text-decoration: none;
  }
  .event-details h3 a:hover {
    color: var(--accent);
  }

  .event-details p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 480px) {
    .event-card {
      flex-direction: column;
      gap: 12px;
    }
    .event-date {
      flex-direction: row;
      gap: 8px;
    }
  }
</style>
