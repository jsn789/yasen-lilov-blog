---
interface Props {
  title: string;
  description?: string;
  activePage?: string;
}

const { title, description = "Data, Analytics & AI â€” Yasen Lilov", activePage = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="robots" content="noindex, nofollow">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>

  <nav class="nav">
    <div class="nav-inner">
      <a href="/" class="nav-brand">yasen<span>.</span></a>
      <ul class="nav-links" id="navLinks">
        <li><a href="/" class={activePage === "home" ? "active" : ""}>Home</a></li>
        <li><a href="/about" class={activePage === "about" ? "active" : ""}>About</a></li>
        <li><a href="/blog" class={activePage === "blog" ? "active" : ""}>Blog</a></li>
        <li><a href="/contact" class={activePage === "contact" ? "active" : ""}>Contact</a></li>
      </ul>
      <button class="nav-toggle" id="navToggle" aria-label="Toggle menu">&#9776;</button>
    </div>
  </nav>

  <div class="page-wrapper">
    <slot />

    <footer class="footer">
      <div class="container">
        <div class="footer-inner">
          <span class="footer-text">&copy; {new Date().getFullYear()} Yasen Lilov</span>
          <ul class="footer-links">
            <li><a href="https://linkedin.com/in/yasenlilov" target="_blank" rel="noopener">LinkedIn</a></li>
            <li><a href="https://github.com/jsn789" target="_blank" rel="noopener">GitHub</a></li>
          </ul>
        </div>
      </div>
    </footer>
  </div>

  <script>
    document.getElementById('navToggle')?.addEventListener('click', () => {
      document.getElementById('navLinks')?.classList.toggle('open');
    });
  </script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
